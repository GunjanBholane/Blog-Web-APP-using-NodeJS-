<a href="/posts/<%= po.id %>/edit">✏️ Edit</a>
<form method="POST" action="/posts/<%= po.id %>?_method=DELETE" style="display:inline;">
  <button type="submit">🗑️ Delete</button>
</form>


<%  } %>
